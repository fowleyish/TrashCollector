@model TrashCollector.ViewModels.CustomerDashboardViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div>
    <h4>Customer</h4>
    <hr />


    <div id="customerDashboard">


        <div id="greeting">
            Hello, 
            <span id="firstName">
                @Html.DisplayFor(model => model.Customer.FirstName)!
            </span>
        </div>


        <div id="customerDetails">
            <div id="nameContainer">
                @Html.DisplayFor(model => model.Customer.FirstName)
                <span>
                    @Html.DisplayFor(model => model.Customer.LastName)
                </span>
            </div>
            <div id="customerId">
                Member ID: @Html.DisplayFor(model => model.Customer.CustomerId)
            </div>
            <div id="addressInfo">
                @Html.DisplayFor(model => model.Street) <br />
                @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.Zip)
            </div>
            <a asp-action="UpdateContactInfo" class="btn btn-primary">Update</a>
        </div>


        <form asp-action="UpdateDay">
            <div class="form-group">
                <h4>Pickup Day</h4>
                <div>
                    Your pickup day is <span id="yourPickupDay">@Html.DisplayFor(model => model.DayOfWeek)</span>
                </div>
                <div id="dayOptions">
                    <div class="row">
                        @foreach (var day in Model.DaysOfWeek)
                        {
                            <div class="col">
                                @Html.LabelFor(model => model.SelectedDay, day.Text[0].ToString())
                                @Html.RadioButtonFor(model => model.SelectedDay, day.Text[0].ToString(), new { id = day.Text + "RadioBtn", value = day })
                            </div>
                        }
                    </div>
                </div>
                <a asp-action="UpdateDay" asp-route-id="@Model.SelectedDay" class="btn btn-primary">Update</a>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
